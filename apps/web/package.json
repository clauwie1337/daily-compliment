  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.19.9",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^15.15.0",
    "playwright-core": "^1.58.2",
    "prettier": "^3.8.1",
    "svelte-check": "^4.3.6",
